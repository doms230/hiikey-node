<body>

<div class="container-fluid">
    <h1><%= title %></h1>
    <h4>By <%= user%> - <small><%= description %>  </small></h4>
    <h4> Date - <small> <%= startDate %> - <%= endDate %> </small></h4>
    <a href="#" class="thumbnail">
        <img src= <%= image %> alt="...">
    </a>
    <h4>event code: <span class="label label-danger"><%=eventCode%></span> </h4>

    <ul class="nav nav-tabs">
        <li role="presentation" class="active"><a href="#">Location</a></li>
        <li id="messages" role="presentation"><a>Messages</a></li>
        <li is="rsvps" role="presentation"><a href="#">RSVPs</a></li>
    </ul>
</div>

<!-- Location -->

<div class="page-header">
    <div class="container-fluid">

        <%if (didRSVP) { %>
        <h4>Location - <small><%=address%></small> </h4>

        <iframe src="//www.google.com/maps/embed/v1/place?q= <%=coordinates%>
      &zoom=17
      &key=AIzaSyAdnr849aDFzuYIJBTqyzdapF_7aR8AikI">
        </iframe>

        <% } else { %>
        <button id="rsvp" type="button" class="btn btn-success btn-lg">RSVP</button>
        <% } %>

    </div>

</div>

<ul class="pager navbar-fixed-bottom">
    <li><a href="https://itunes.apple.com/us/app/hiikey/id1013280340?ls=1&mt=8">Open in app</a> </li>
</ul>

</br>
<ol class="breadcrumb">
    <li><a href="/about">ABOUT</a></li>
    <li><a href="/terms">TERMS</a></li>
    <p class="navbar-text navbar-right"> © 2017 SocialGroupe, Inc. </p>
</ol>
</br>

 <script>

     $("#messages").click(function(){
         $.get("events/rsvp",
                 {
                     name: "Donald Duck",
                     city: "Duckburg"
                 },
                 function(data, status){
                     //alert("Data: " + data + "\nStatus: " + status);

                 });
     });

     $("#rsvp").click(function(){
         $.post("events/rsvp",
                 {
                     name: "Donald Duck",
                     city: "Duckburg"
                 },
                 function(data, status){
                     //alert("Data: " + data + "\nStatus: " + status);
                     window.location.href = data.redirect;
                 });
     });

